                                </div>

                                <h3>Caracter√≠sticas</h3>
                                <p>
                                    <%= daycare.characteristics %>
                                </p>
                                <h3>Instalaciones</h3>
                                <p>
                                    <%= daycare.facilities %>
                                </p>
                                <h3>Categoria</h3>
                                <p>
                                    <%= daycare.category_id %>
                                </p>

                                <div class="reservar" strong>
                                    <a href="/productos/detalle-producto/<%= daycare.id  %>">Ver Guarderia</a></strong>
